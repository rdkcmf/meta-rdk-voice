+		  TabIndexCounter = TabIndexCounter+1;
+	  }
+	  if(TabIndexCounter < BtnElements.length){
+		  BtnElements[TabIndexCounter].focus();
+		  TabIndexCounter = TabIndexCounter+1;
+		  LstPrsdKey = 'ArrowDown';
+	  }
+  }
