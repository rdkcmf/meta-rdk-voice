+  
+	  if(LstPrsdKey === 'ArrowDown')
+	  {
+		  TabIndexCounter = TabIndexCounter-1;
+	  }
+	  
+		if(TabIndexCounter != 0){	
+			TabIndexCounter = TabIndexCounter-1;
+			BtnElements[TabIndexCounter].focus();
+			LstPrsdKey = 'ArrowUp';
+		}
+		else if(document.activeElement)
